<%- include("partials/head") %> <%- include("partials/aside") %>

<main>
  <h1>Edit Player</h1>
  <form action="" method="POST">
    <label for="name">Name:</label><br />
    <input
      class="edit-input"
      type="text"
      id="name"
      name="name"
      value="<%= player.name %>"
    /><br />

    <label for="age">Age:</label><br />
    <input
      class="edit-input"
      type="number"
      id="age"
      name="age"
      value="<%= player.age %>"
    /><br />

    <label for="birthdate">Birthdate:</label><br />
    <input
      class="edit-input"
      type="date"
      id="birthdate"
      name="birthdate"
      value="<%= player.birthdate %>"
    /><br />

    <label for="league">League:</label><br />
    <select class="edit-input" id="league" name="league">
      <option value="Premier League">Premier League</option>
      <option value="La Liga">La Liga</option>
      <option value="Bundesliga">Bundesliga</option>
      <option value="Serie A">Serie A</option>
      <option value="Ligue 1">Ligue 1</option>
      <option value="Primeira Liga">Primeira Liga</option>
      <option value="Soviet Top League">Soviet Top League</option>
      <option value="Eredivisie">Eredivisie</option>
      <option value="Russian Premier League">Russian Premier League</option>
      <option value="Super Lig">Super Lig</option>
      <option value="Belgian Pro League">Belgian Pro League</option>
      <option value="N/A">N/A</option></select
    ><br />

    <label for="club">Club:</label><br />
    <input class="edit-input" type="text" id="club" name="club" value="<%=
    player["club-infos"].club %>" /><br />

    <button type="submit">Save Changes</button>
  </form>
</main>
