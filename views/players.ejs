<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://kit.fontawesome.com/ccd4003a42.js" crossorigin="anonymous"></script>
    <title>Players</title>
</head>
<body>
  <%- include("./partials/aside") %>
  <main>
    <%- include("./partials/search") %>
    <section class="players-container">
            <table class="players">
                <tr class="table-heading">
                    <th scope="col"><i class="fa-solid fa-person-walking"></i> Player</th>
                    <th scope="col"><i class="fa-solid fa-trophy"></i> League</th>
                    <th scope="col"><i class="fa-solid fa-people-group"></i> Club</th>
                    <th scope="col"><i class="fa-solid fa-coins"></i> Market Value</th>
                    <th scope="col"><i class="fa-solid fa-earth-americas"></i> Country</th>
                    <th scope="col"><i class="fa-solid fa-notes-medical"></i> Active</th>
                    <th scope="col"><i class="fa-regular fa-futbol"></i> Action</th>
                </tr>
                <% for (let i = 0; i < players.length; i++) { %>
                    <tr>
                        <td id="playerName">
                            <div class="playerimg" style="background-image: url('<%= players[i].imageURL %>');"></div>
                            <%= players[i].name %>
                        </td>
                        <td><%= players[i]['club-infos'].league %></td>
                        <td><%= players[i]['club-infos'].club %></td>
                        <td><%= players[i].marketValue %></td>
                        <td><%= players[i].nationality %></td>
                        <td id="active" class="<%= players[i].status === 'active' ? 'player-active' : 'player-inactive' %>">
                            <div class="icon <%= players[i].status === 'active' ? 'player-active' : 'player-inactive' %>"></div>
                        </td>
                        <td><a href="">view</a></td>
                    </tr>
                <% } %>
            </table>
        </section>
        <footer>
        </footer>
    </main>
</body>
</html>
